{ pkgs ?  import <nixpkgs> {}
, firmware ? import ../src {}
}:

let
  config = ./.;

  glove80_left  = firmware.zmk.override { board = "glove80_lh"; keymap = "${config}/{{ base_name }}.keymap"; kconfig = "${config}/{{ base_name }}.conf"; };
  glove80_right = firmware.zmk.override { board = "glove80_rh"; keymap = "${config}/{{ base_name }}.keymap"; kconfig = "${config}/{{ base_name }}.conf"; };

in firmware.combine_uf2 glove80_left glove80_right
