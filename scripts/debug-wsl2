#!/bin/bash
# WSL2 Flash Debug Wrapper Script

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/debug_wsl2_flash.py"

# Check if we're in WSL2
if ! grep -qEi "(Microsoft|WSL)" /proc/version 2>/dev/null; then
    echo "Warning: This script is designed for WSL2 environments"
    echo "Current environment may not support WSL2-specific features"
    echo ""
fi

# Execute the Python script with all arguments
python3 "$PYTHON_SCRIPT" "$@"